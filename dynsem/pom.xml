<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <name>ds</name>
  <artifactId>dynsem</artifactId>
  <packaging>spoofax-language</packaging>
  <description>Spoofax DynSem (dynamic semantic specification) language implementation.</description>
  <url>https://github.com/metaborg/dynsem</url>

  <parent>
    <groupId>org.metaborg</groupId>
    <artifactId>org.metaborg.maven.parent.language</artifactId>
    <version>1.5.0-SNAPSHOT</version>
    <relativePath>../../spoofax-deploy/org.metaborg.maven.parent.language</relativePath>
  </parent>

  <build>
    <resources>
      <resource>
        <directory>lib</directory>
        <targetPath>lib</targetPath>
        <includes>
          <include>*.tbl</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.metaborg</groupId>
        <artifactId>spoofax-maven-plugin</artifactId>
        <configuration>
            <format>jar</format>
            <pardonedLanguages>
                <language>NameBindingLanguage</language>
            </pardonedLanguages>
        </configuration>
        <dependencies>
          <dependency>
            <groupId>org.metaborg</groupId>
            <artifactId>org.metaborg.meta.lang.template</artifactId>
            <version>${metaborg-version}</version>
            <type>spoofax-language</type>
          </dependency>
          <dependency>
            <groupId>org.metaborg</groupId>
            <artifactId>org.metaborg.meta.lang.nabl</artifactId>
            <version>${metaborg-version}</version>
            <type>spoofax-language</type>
          </dependency>
          <dependency>
            <groupId>org.metaborg</groupId>
            <artifactId>org.metaborg.meta.lang.esv</artifactId>
            <version>${metaborg-version}</version>
            <type>spoofax-language</type>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>

  <developers>
    <developer>
      <name>Vlad Vergu</name>
      <email>v.a.vergu@tudelft.nl</email>
      <organization>Delft University of Technology</organization>
      <organizationUrl>http://www.ewi.tudelft.nl/en</organizationUrl>
    </developer>
  </developers>

  <scm>
    <connection>scm:git:git@github.com:metaborg/dynsem.git</connection>
    <developerConnection>scm:git:git@github.com:metaborg/dynsem.git</developerConnection>
    <url>https://github.com/metaborg/dynsem</url>
  </scm>
</project>
