module generator/interpreter/utils

rules
  // mkdir -p
  
  
  mkdir(create-parent) =
    ?dir;
    if not(create-parent) then
      <mkdir> dir
    else
      <mkdir-parents> ("", <string-tokenize(|['/'])> dir)
    end
  
  mkdir-parents =
    ?(parent, [x|xs]);
    parent' := <conc-strings> (parent, "/", x);
    <file-exists <+ mkdir> parent';
    <mkdir-parents> (parent', xs)
  
  mkdir-parents = ?(_, []); Fst
      
      
  

