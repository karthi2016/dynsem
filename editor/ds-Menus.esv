  menu: "Syntax"
    
    action: "Format"               = format-editor (openeditor) 
    action: "Show Abstract Syntax" = debug-show-aterm (openeditor) (meta) 
    action: "Show Analyzed Syntax" = debug-show-analyzed-selection (openeditor) (meta) 
    
